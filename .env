# Platform (Apple Silicon = linux/arm64/v8, Intel/AMD = linux/amd64)
DOCKER_PLATFORM=linux/amd64

# Ports
WP_HTTP_PORT=8080
PHPMYADMIN_PORT=8082

# WordPress DB connection
WORDPRESS_DB_HOST=db
WORDPRESS_DB_NAME=devdb
WORDPRESS_DB_USER=dev
WORDPRESS_DB_PASSWORD=password

# Images (stay on latest by default â€” override if you want to pin)
MYSQL_IMAGE=mysql:latest
PHPMYADMIN_IMAGE=phpmyadmin:latest

# MySQL credentials
MYSQL_DATABASE=devdb
MYSQL_USER=dev
MYSQL_PASSWORD=password
MYSQL_ROOT_PASSWORD=password

# Named volumes
WP_VOLUME_NAME=wordpress
DB_VOLUME_NAME=db
